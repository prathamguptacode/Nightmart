generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  address   address[]
  products  product[]
  orders    order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model address {
  id        Int      @id @default(autoincrement())
  address   String
  userId    Int
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model order {
  id        Int      @id @default(autoincrement())
  productId Int
  product   product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    Int
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model tempUser {
  id        Int      @id @default(autoincrement())
  email     String
  name      String
  password  String
  otp       String
  createdAt DateTime @default(now())

  @@index([email])
}
